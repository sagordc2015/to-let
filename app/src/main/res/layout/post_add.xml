        <TextView
            android:id="@+id/latitude"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/longitude"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Address -->
        <EditText
            android:id="@+id/address"
            android:hint="@string/post_address"
            android:gravity="top"
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:inputType="textCapSentences|textAutoCorrect|text|textMultiLine"
            android:background="@drawable/edit_text_border"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/description"
            android:gravity="top"
            android:hint="@string/post_description"
            android:layout_marginBottom="15dp"
            android:inputType="textCapSentences|textAutoCorrect|text|textMultiLine"
            android:background="@drawable/edit_text_border"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <!-- Add Post Button -->
        <Button
            android:id="@+id/add_post_btn"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/post_add_post"
            android:textColor="@color/white_color"
            android:background="@color/dark_grey_color"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/post_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>