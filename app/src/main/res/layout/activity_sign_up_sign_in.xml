<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpSignInActivity">


    <Button
        android:id="@+id/close_log_reg"
        android:background="@drawable/button_close_selector"
        android:layout_gravity="right"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="@string/log_reg_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="@string/log_reg_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_iphone"
        android:layout_width="412dp"
        android:layout_height="412dp" />

    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50">
            <Button
                android:id="@+id/sign_up"
                android:text="@string/sing_up"
                android:layout_marginRight="5dp"
                android:textColor="@color/white_color"
                android:background="@color/dark_grey_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50">
            <Button
                android:id="@+id/sign_in"
                android:text="@string/sing_in"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white_color"
                android:background="@color/dark_grey_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>